body {
  font-family: 'Open Sans', sans-serif;
}

.container {

  width: 100%;
  height: 100%;
}

.top,
.middle,
.bottom,
.form,
.email {
  position: absolute;
  margin: auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.top,
.middle,
.bottom {
  width: 480px;
}

.top,
.bottom {
  height: 125px;
}

.top {
  bottom: 195px;
  overflow: hidden;
}

.bottom {
  top: 195px;
}

#pound {
  font-size: 44px;
  font-weight: bold;
  text-align: center;
}

#help {
  padding: 10px;
}

.middle {
  width: 480px;
  height: 70px;
}

.form {
  width: 470px;
  height: 70px;
}

input[type="text"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"] {

  /* Text */
  font-family: "Lato", sans-serif;
  font-size: 44px;
  font-weight: normal;
  letter-spacing: normal;
  text-shadow: none;
  text-transform: none;
  text-align: center;
  vertical-align: middle;
  line-height: 50px;

  /* Display */
  cursor: auto;
  float: none;
  display: inline-block;

  /* Sizing */
  padding: 8px 5px;
  width: 450px;
  height: 50px;

  /* Colors */
  color: #34495e;
  border: 5px solid #bdc3c7;
  background-color: rgb(255, 255, 255);

  /* Effects */

  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;

  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;

  -webkit-transition: .25s linear, .25s linear;
  -moz-transition: .25s linear, .25s linear;
  -o-transition: .25s linear, .25s linear;
  transition: .25s linear, .25s linear;

  -webkit-user-select: text;
  -webkit-appearance: none;
  -webkit-backface-visibility: hidden;
}

input[type="text"]:focus,
input:focus {
  border-color: #1abc9c;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  outline: none;
}

input[type="text"].valid {
  color: #34495e;
  border-color: #2ecc71;
}

input[type="text"].error {
  color: #e74c3c;
  border-color: #e74c3c;
}

.placeheld:-ms-input-placeholder {
  color: #e74c3c;
}

.placeheld:-moz-placeholder { /* Firefox 18- */
  color: #e74c3c;
}

.placeheld::-moz-placeholder {  /* Firefox 19+ */
  color: #e74c3c;
}

.placeheld::-webkit-input-placeholder {
  color: #e74c3c;
}

.placeheld:-input-placeholder {
  color: #e74c3c;
}
