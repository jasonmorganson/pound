body {
  font-family: 'Open Sans', sans-serif;
}

.container {

  width: 100%;
  height: 100%;
}

.top,
.middle,
.bottom,
.form,
.email {
  position: absolute;
  margin: auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.top,
.middle,
.bottom {
  width: 480px;
}

.top,
.bottom {
  height: 125px;
}

.top {
  bottom: 195px;
  overflow: hidden;
}

.bottom {
  top: 195px;
}

#pound {
  font-size: 44px;
  font-weight: bold;
  text-align: center;
}

#help {
  padding: 10px;
}

.middle {
  width: 480px;
  height: 70px;
}

.form {
  width: 470px;
  height: 70px;
}

input[type="email"] {

  /* Text */
  font-family: "Lato", sans-serif;
  font-size: 44px;
  font-weight: normal;
  letter-spacing: normal;
  text-align: center;
  vertical-align: middle;
  line-height: 50px;

  /* Sizing */
  padding: 8px 5px;
  width: 450px;
  height: 50px;

  /* Colors */
  color: #34495e;
  border: 5px solid #bdc3c7;
  background-color: rgb(255, 255, 255);

  /* Effects */
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
}

